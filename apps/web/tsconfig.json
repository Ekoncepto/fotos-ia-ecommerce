{
  "extends": "config/typescript/nextjs.json",
  "include": [
    "next-env.d.ts",
    "compiler.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["../../node_modules/@types"]
  }
}
